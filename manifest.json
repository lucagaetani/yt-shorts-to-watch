{
  "manifest_version": 3,
  "name": "YouTube Shorts View Switcher",
  "description": "Switch every YouTube Shorts into normal YouTube video.",
  "version": "1.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}